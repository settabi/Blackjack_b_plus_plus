<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.Cursor?>

<AnchorPane fx:id="mainContainer" prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.hcw.blackjack_b_plus_plus.controller.MenuController">
    <children>

        <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>

                <ImageView fitHeight="${mainContainer.height}" fitWidth="${mainContainer.width}" pickOnBounds="true" preserveRatio="false">
                    <image>
                        <Image url="@images/background.png" />
                    </image>
                </ImageView>

                <ImageView fitWidth="${mainContainer.width}" scaleX="0.30" scaleY="0.30" translateY="-115.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/dealer_yumeko.png" />
                    </image>
                </ImageView>

                <ImageView fitWidth="${mainContainer.width}" scaleX="0.75" scaleY="0.75" translateY="100.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/tisch.png" />
                    </image>
                </ImageView>

                <ImageView fitWidth="${mainContainer.width}" scaleX="0.09" scaleY="0.09" translateX="250.0" translateY="50.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/whole_deck.png" />
                    </image>
                </ImageView>

                <ImageView fitHeight="${mainContainer.height}" fitWidth="${mainContainer.width}" opacity="0.95" pickOnBounds="true" preserveRatio="false">
                    <image>
                        <Image url="@images/background.png" />
                    </image>
                </ImageView>

                <ImageView fitWidth="${mainContainer.width}" scaleX="0.4" scaleY="0.4" translateY="-250.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/welcome.png" />
                    </image>
                </ImageView>

                <HBox alignment="BOTTOM_CENTER" spacing="100.0" translateY="-100.0" pickOnBounds="false">
                    <children>

                        <ImageView fx:id="btnRules" fitHeight="97.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@images/btn_rules.png" />
                            </image>
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </ImageView>

                        <ImageView fx:id="btnStart" fitHeight="97.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@images/btn_start.png" />
                            </image>
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </ImageView>

                        <ImageView fx:id="btnExit" fitHeight="97.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@images/btn_exit.png" />
                            </image>
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </ImageView>

                    </children>
                </HBox>

            </children>
        </StackPane>

    </children>
</AnchorPane>